{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de Direcciones</h1>

{% for flash_message in app.session.flashbag.get('notice') %}
    <div class="flash-notice">
        {{ flash_message }}
    </div>
{% endfor %}

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Calle</th>
                <th>Colonia</th>
                <th>Delegacion</th>
                <th>Numero</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for direccion in direccions %}
            <tr>
                <td><a href="{{ path('direccion_show', { 'id': direccion.id }) }}">{{ direccion.id }}</a></td>
                <td>{{ direccion.calle }}</td>
                <td>{{ direccion.colonia }}</td>
                <td>{{ direccion.delegacion }}</td>
                <td>{{ direccion.numero }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('direccion_show', { 'id': direccion.id }) }}">Mostrar</a>
                        </li>
                        <li>
                            <a href="{{ path('direccion_edit', { 'id': direccion.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('direccion_new') }}">Crear nueva direcci√≥n</a>
        </li>
    </ul>
{% endblock %}
